<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="DataAppLibraryPU" transaction-type="RESOURCE_LOCAL">
    <class>com.javafx.experiments.dataapp.model.Address</class>
    <class>com.javafx.experiments.dataapp.model.Customer</class>
    <class>com.javafx.experiments.dataapp.model.DailySales</class>
    <class>com.javafx.experiments.dataapp.model.Dealer</class>
    <class>com.javafx.experiments.dataapp.model.DiscountRate</class>
    <class>com.javafx.experiments.dataapp.model.Employee</class>
    <class>com.javafx.experiments.dataapp.model.Engine</class>
    <class>com.javafx.experiments.dataapp.model.FullProductListing</class>
    <class>com.javafx.experiments.dataapp.model.LiveSalesList</class>
    <class>com.javafx.experiments.dataapp.model.Product</class>
    <class>com.javafx.experiments.dataapp.model.ProductType</class>
    <class>com.javafx.experiments.dataapp.model.ProjectedSales</class>
    <class>com.javafx.experiments.dataapp.model.Region</class>
    <class>com.javafx.experiments.dataapp.model.Role</class>
    <class>com.javafx.experiments.dataapp.model.SalesOrder</class>
    <class>com.javafx.experiments.dataapp.model.SalesOrderLine</class>
    <class>com.javafx.experiments.dataapp.model.Transmission</class>
    <class>com.javafx.experiments.dataapp.model.ZipCityInfo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/dataapp"/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.user" value="dataapp"/>
      <property name="javax.persistence.jdbc.password" value="dataapp"/>
      <property name="javax.persistence.schema-generation.database.action" value="none"/>
      <property name="javax.persistence.schema-generation.create-source" value="script"/>
      <property name="javax.persistence.schema-generation.create-script-source" value="META-INF/create-database.sql" />
      <property name="javax.persistence.sql-load-script-source" value="META-INF/zip_code_inserts.sql" />
    </properties>
  </persistence-unit>
</persistence>
